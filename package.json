{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "deploy:staging": "lerna run deploy --stream --since origin/develop",
    "deploy:dev": "lerna run deploy --stream --since origin/master",
    "deploy:prod": "lerna run deploy --stream --since && npm run version:release",
    "version:release": "lerna version --conventional-commits --no-commit-hooks --no-git-tag-version --create-release github --yes",
    "build:prod": "lerna run build:prod",
    "clean:build": "lerna clean --yes && lerna bootstrap"
  }
}
