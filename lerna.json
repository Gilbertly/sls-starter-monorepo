{
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "packages": ["packages/*", "services/*"],
  "command": {
    "version": {
      "npmClient": "npm",
      "allowBranch": "master",
      "changelogPreset": "angular",
      "message": "chore(release): version bump",
      "ignoreChanges": [
        ".gitignore",
        "package*.json",
        "**/*.md",
        "./.github/**"
      ]
    }
  }
}
